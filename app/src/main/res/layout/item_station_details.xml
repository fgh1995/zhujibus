<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <!-- 到站车辆信息组合（垂直线性布局） -->

    <!-- 站点序号圆形背景 -->
    <LinearLayout
        android:id="@+id/arrived_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/station_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/station_order"
        app:layout_constraintVertical_bias="0.0">

        <!-- 车辆状态指示图标（到站图标） -->

        <!-- 到站车牌号 -->
        <ImageView
            android:id="@+id/bus_status_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:src="@drawable/bus_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/station_order"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/blue_circle"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/arrived_container"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="4dp" />

    <!-- 线路指示线 -->
    <View
        android:id="@+id/line_bottom"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="#0070FD"
        android:minHeight="40dp"
        app:layout_constraintStart_toStartOf="@id/station_order"
        app:layout_constraintTop_toBottomOf="@+id/station_order" />

    <!-- 途中车辆信息组合（垂直线性布局） -->

    <!-- 站点名称 -->
    <LinearLayout
        android:id="@+id/on_way_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/line_bottom"
        app:layout_constraintEnd_toStartOf="@id/line_bottom"
        app:layout_constraintTop_toTopOf="@id/line_bottom"
        app:layout_constraintVertical_bias="0.5">
        <!-- 车辆途中指示图标 -->
        <ImageView
            android:id="@+id/bus_on_way_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bus_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/station_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/station_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/station_order"
        app:layout_constraintBottom_toBottomOf="@id/station_order" />

</androidx.constraintlayout.widget.ConstraintLayout>