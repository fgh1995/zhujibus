<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bus_item_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bus_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bus_route_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="35路(城市公交)" />

            <TextView
                android:id="@+id/bus_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="距离查询站点10站（约5.9公里）" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/route_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bus_stations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="新农都公交首末站-建银大厦公交首末站"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/next_bus_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/next_bus_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="09:40" />

                <TextView
                    android:id="@+id/next_bus_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近一班" />
            </LinearLayout>
        </LinearLayout>
        <!-- 时刻信息 -->
        <LinearLayout
            android:id="@+id/schedule_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- 首班车 -->
            <LinearLayout
                android:id="@+id/first_bus_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/first_bus_marker"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/green_circle_border"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="首"
                    android:textColor="#266735"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/first_bus_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:text="06:00" />
            </LinearLayout>

            <!-- 末班车 -->
            <LinearLayout
                android:id="@+id/last_bus_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:id="@+id/last_bus_marker"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/red_circle_border"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="末"
                    android:textColor="#FF0000"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/last_bus_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:text="18:10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>